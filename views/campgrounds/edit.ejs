<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
            <div class="mb-3" id="titleInput">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>">
            </div>
            <div class="mb-3" id="locationInput">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>">
            </div>
            <div class="mb-3" id="imgInput">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="img" value="<%= camp.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]" value="<%= camp.price %>">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3" id="descriptionInput">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" ><%= camp.description %></textarea>
            </div>
            <div class="mb-3 d-grid gap-2">
                <button style="color: white;" class="btn btn-info" type="submit">Update</button>
            </div>
        </form>
        
        <footer>
            <a href="/campgrounds">Back to Campgrounds</a>
            <a href="/campgrounds/<%= camp._id %>">Cancel Edit</a>
        </footer>
    </div>
</div>