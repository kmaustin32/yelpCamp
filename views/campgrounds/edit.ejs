<% layout('layouts/boilerplate') %> 
<h1>Edit Campground</h1>
<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
    <div id="titleInput">
        <label for="title">Title</label>
        <input type="text" name="campground[title]" id="title" value="<%= camp.title %> ">
    </div>
    <div id="locationInput">
        <label for="location">Location</label>
        <input type="text" name="campground[location]" id="location" value="<%= camp.location %> ">
    </div>
    <button type="submit">Submit</button>
</form>

<footer>
    <a href="/campgrounds">Back to Campgrounds</a>
    <a href="/campgrounds/<%= camp._id %>">Cancel Edit</a>
</footer>
