<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form class='validated-form' action="/campgrounds" method="POST" enctype="multipart/form-data" novalidate>
            <div class="mb-3" id="titleInput">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3" id="locationInput">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div>
                <input type="file" name="image" id="image" multiple>
            </div>
            <!-- <div class="mb-3" id="imgInput">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="img" required>
                <div class="valid-feedback">Looks good!</div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]" required>
                    <span class="input-group-text">.00</span>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            </div>
            <div class="mb-3" id="descriptionInput">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-2 d-grid gap-2">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </form>
        
        <footer class="mb-3 d-grid gap-2">
            <a href="/campgrounds" class="btn btn-secondary">Back to Campgrounds</a>
        </footer>
    </div>
</div>

