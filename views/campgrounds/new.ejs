<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3" id="titleInput">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title">
            </div>
            <div class="mb-3" id="locationInput">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location">
            </div>
            <div class="mb-3" id="imgInput">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="img">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3" id="descriptionInput">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
            </div>
            <div class="mb-3 d-grid gap-2">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </form>
        
        <footer>
            <a href="/campgrounds">Back to Campgrounds</a>
        </footer>
    </div>
</div>
